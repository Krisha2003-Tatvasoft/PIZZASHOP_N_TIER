@{

    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

@model pizzashop.Entity.ViewModels.Forget;

<link rel="stylesheet" href="~/css/forgotPassword.css" />


<div class="login-rightSide-content">

    <div class="d-flex justify-content-center align-items-center gap-2">
        <img class="logo" src="../images/pizzashop_logo.png">
        <span class="app-name"><b>PIZZASHOP</b></span>
    </div>


    <form asp-controller="Auth" asp-action="Forget" class="form d-flex flex-column gap-3 ">

        <h1 class="heading-text">
            Forgot Password
        </h1>

        <p class="instruction">Enter your email and we'll send you a link to reset your password.</p>

        <div>
            <div class="position-relative">
                <input placeholder="E-mail*" asp-for="Email" type="text" class="form-control email" id="password">
                <i class="bi bi-person-fill custom-icon"></i>
            </div>

            <span asp-validation-for="Email" class="text-danger"></span>
        </div>


        <button type="submit">
            Send
        </button>

        <div class="back-toLogin">
            <a asp-controller="Auth" asp-action="Login">Back to login</a>
        </div>

    </form>

</div>

<script>
    $(document).ready(function () {
        var email = localStorage.getItem("userEmail");
        if (email) {
            $(".email").val(email);
             localStorage.setItem("userEmail", "");
        }
    });
</script>