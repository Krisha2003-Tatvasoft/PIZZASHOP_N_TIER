@{

    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

@model pizzashop.Entity.ViewModels.ResetPassword;

<link rel="stylesheet" href="~/css/resetPassword.css" />


<div class="login-rightSide-content">

    <div class="d-flex justify-content-center align-items-center gap-2">
        <img class="logo" src="../images/pizzashop_logo.png">
        <span class="app-name"><b>PIZZASHOP</b></span>
    </div>


    <form asp-controller="Auth" asp-action="ResetPassword" method="post" class="form d-flex flex-column gap-3 ">

        <h2 class="heading-text">
            Reset Your Password
        </h2>

        <p class="instruction">Enter your email and we'll send you a link to reset your password.</p>
        <input type="hidden" name="email" value="@ViewBag.Email" />


        <div>
            <input placeholder="New Password*" type="password" class="form-control" id="validationServer03"
                aria-describedby="validationServer03Feedback" name="password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>


        <div>
            <input placeholder="confirm New Password*" type="password" class="form-control" id="validationServer03"
                name="confirmPassword" aria-describedby="validationServer03Feedback">
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>


        <button type="submit">
            Submit
        </button>

        <div class="back-toLogin">
            <a href="../pages/login.html">Back to login</a>
        </div>

    </form>

</div>
