<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>mail</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>
@{
    Layout = null;
}

<body>
    <div
        style="background-color: rgb(224, 244, 255);height: 100vh;display:flex;align-items: center;justify-content: center;flex-direction: column;">
        <div style="top:30px;display:flex;align-items: center;justify-content: center;">
            <img src='https://i.postimg.cc/PfQPH39k/pizzashop-logo-removebg-preview.png'
                style="width:80px;height:80px;" />
            <span class="px-2" style="font-size: 55px;color: #3c6b9e;font-weight: 500;">PIZZASHOP</span>
        </div>
        <div>
            <span style="color: #3c6b9e; font-size: 100px;font-weight: 400px;"><b>@ViewBag.ErrorMessage</b></span>
             @* <span style="color: #3c6b9e; font-size: 300px;font-weight: 1000px;"><b>404</b></span>  *@
        </div>
        <p>Page Not Found</p>
        <p style="color: #3c6b9e;">Oops, the page you're looking for isn't here</p>
        <div class="back-login" style="font-size: 40px;">
            <form asp-controller="Home" asp-action="Index" method="Get">
                <button type="submit" class="btn btn-primary">Back to Dashboard</button>
            </form>

        </div>
    </div>
@await Html.PartialAsync("_Toast")

</body>


</html>