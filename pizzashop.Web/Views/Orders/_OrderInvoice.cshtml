@model pizzashop.Entity.ViewModels.OrderDetails

<div class="container mt-4 p-4 bg-white shadow rounded">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center border-bottom pb-3">
                    <img src="your-logo-url.png" alt="Logo" class="img-fluid" style="height: 50px;">
                    <h1 class="text-primary fw-bold">PIZZASHOP</h1>
                </div>
    
            <!-- Customer & Order Details -->
            <div class="row mt-3">
                    <div class="col-md-6">
                            <h5 class="fw-semibold">Customer Details</h5>
                            <p><strong>Name:</strong> @Model.Customername</p>
                            <p><strong>Mobile:</strong> @Model.Phoneno</p>
                        </div>
                    <div class="col-md-6 text-md-end">
                            <h5 class="fw-semibold">Order Details</h5>
                            <p><strong>Invoice No:</strong> @Model.Invoicenumber</p>
                            <p><strong>Date:</strong> @Model.PlacedOn</p>
                            <p><strong>Table:</strong> @foreach(var table in Model.Tablenames)
                            {
                                @table
                                }</p>
                        </div>
                </div>
    
            <!-- Items Table -->
            <div class="table-responsive">
                    <table class="table table-bordered mt-3">
                            <thead class="bg-primary text-white">
                                    <tr>
                                            <th>#</th>
                                            <th>Item</th>
                                            <th>Quantity</th>
                                            <th>Unit Price</th>
                                            <th>Total</th>
                                        </tr>
                                </thead>
                            <tbody>
                                    @for (int i = 0; i < Model.Items.Count; i++)
                                    {
                                            <tr>
                                                    <td>@(i + 1)</td>
                                                    <td>@Model.Items[i].Itemname</td>
                                                    <td>@Model.Items[i].Quantity</td>
                                                    <td>₹@Model.Items[i].Rate</td>
                                                    <td>₹@(Model.Items[i].Quantity * Model.Items[i].Rate)</td>
                                                </tr>
                                    }
                                </tbody>
                        </table>
                </div>
    
            <!-- Summary -->
            <div class="text-end mt-3">
                    <p><strong>Sub Total:</strong> ₹@Model.Subamount</p>
                    @* <p><strong>CGST:</strong> ₹@Model.CGST</p>
                    <p><strong>SGST:</strong> ₹@Model.SGST</p>
                    <p><strong>GST:</strong> ₹@Model.GST</p> *@
                    <h5 class="fw-bold text-primary mt-2">Total Amount Due: ₹@Model.Totalamount</h5>
                </div>

            <!-- Payment & Footer -->
            <div class="mt-4">
                    <p><strong>Payment Method:</strong>PaymentMethod</p>
                    <h5 class="text-center fw-bold mt-3">THANK YOU!</h5>
                </div>
        </div>