@model pizzashop.Entity.ViewModels.WaitingListAssignTable

<div class="modal fade modal-delete" id="AssignTable" tabindex="-1" aria-labelledby="deleteModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteTable">Assign Table</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="assignTable-form">
                <div class="modal-body d-flex flex-column flex-sm-row justify-content-center gap-3">
                    <input type="hidden" class="waitingToken" asp-for="Waitingtokenid">
                    <input type="hidden" id="SectionId" value="">
                    <div class="form-floating mb-2 w-100 ">
                        <select class="form-select Sectionid " asp-for=Sectionid id="Sectionid">
                            <option value="">Select Section</option>
                        </select>
                        <label for="Sectionid">Section*</label>
                      <span class="text-danger" asp-validation-for="Sectionid"></span>
                    </div>
                    <div class="form-floating w-100 position-relative">
                        <div class="dropdown w-100">
                            <button class="custom-select-dropdown" type="button" id="tableDropdownBtn"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                Select Tables
                            </button>
                            <ul class="dropdown-menu w-100" id="tableDropdownMenu"
                                style="max-height: 200px; overflow-y: auto;">
                                <!-- Table checkboxes will be added here dynamically -->
                            </ul>
                        </div>
                 <span class="text-danger text-end table-list"></span>
                    </div>
                </div>
                <div class="modal-footer d-flex justify-content-center justify-content-sm-end  gap-2">
                    <button type="button" class="btn btn-primary Assign-tables-yes"
                       >Assign</button>
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancel</button>
            </form>
        </div>
    </div>
</div>
</div>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>