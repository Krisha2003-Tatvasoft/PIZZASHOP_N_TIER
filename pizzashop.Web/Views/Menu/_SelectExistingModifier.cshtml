@model List<pizzashop.Entity.ViewModels.ModifierTable>;

<div class="table-responsive mt-2">
    <table class="table">
        <thead>
            <tr>
                <th>
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                </th>
                <th>
                    Name
                </th>
                <th>Unit</th>
                <th>Rate</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var modifier in Model)
            {

                <tr>
                    <td>
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                    </td>
                    <td>@modifier.Modifiername</td>
                    <td>@modifier.Unitname</td>
                    <td>@modifier.Rate</td>
                    <td>@modifier.Quantity</td>
                </tr>

            }

        </tbody>
    </table>
</div>

