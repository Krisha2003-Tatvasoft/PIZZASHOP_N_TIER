@model List<pizzashop.Entity.ViewModels.ModifierTable>;



<div class="table-responsive">
    <table class="table">
            <tr>
                <th>
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                </th>
                <th>
                    Name
                </th>
                <th>Unit</th>
                <th>Rate</th>
                <th>Quantity</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                    </td>
                    <td>

                        <div class="d-flex gap-3 align-items-center">
                            <img class="dining-menu-img" src="../images/dining-menu.png" />
                            <div>@item.Modifiername</div>
                        </div>

                    </td>
                    <td>@item.Unitname</td>
                    <td>@item.Rate</td>
                    <td>@item.Quantity</td>
                    <td>
                        <div class="d-flex gap-3 edit-delet"><button class="button" data-bs-toggle="modal"
                                data-bs-target="#updateNewModifier"><img src="../images/pencil.svg"></button><button
                                class="button" data-bs-toggle="modal" data-bs-target="#deleteModifier"><img
                                    class="delete-icon" src="../images/trash.svg"></button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

