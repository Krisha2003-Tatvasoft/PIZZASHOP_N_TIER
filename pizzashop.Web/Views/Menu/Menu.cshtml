                            @if (menuPermission.Canaddedit == true)
                            {
                                <button class=" button new-Modifiers-btn openModifierModel">
                                    <i class="bi bi-plus"></i><span class="d-none d-sm-inline">New Modifier</span>
                                </button>
                            }

                        </div>

                        <div id="modifier-table"></div>


                    </div>

                </div>

            </div>

        </div>

    </div>

</div>


