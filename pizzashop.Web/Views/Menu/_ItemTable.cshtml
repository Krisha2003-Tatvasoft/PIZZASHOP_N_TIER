@model List<pizzashop.Entity.ViewModels.ItemTable>;
<div class="button-input mb-2 me-3">

    <div class="search-field">
        <input class="search form-control me-2 border-0" type="search" placeholder="Search" aria-label="Search">
    </div>


    <button class="button" data-bs-toggle="modal" data-bs-target="#deleteSelectedItem" class="delet-btn">
        <image class="delet-icon" src="../images/trash.svg" />
    </button>

    <button class="new-item-btn button" data-bs-toggle="modal" data-bs-target="#addItem">
        + New Item
    </button>

</div>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                </th>
                <th>
                    Name
                </th>
                <th>Item Type</th>
                <th>Rate</th>
                <th>Quantity</th>
                <th>Available</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

                <tr>
                    <td>
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                    </td>
                    <td class="w-25">

                        <div class="d-flex gap-3 align-items-center">
                            <img class="dining-menu-img" src="../images/dining-menu.png" />
                            <div>@item.Itemname</div>
                        </div>


                    </td>
                    <td>
                        <img class="veg-nonveg-icon" src="../images/non-veg-icon.svg">
                    </td>
                    <td>
                        @item.Rate
                    </td>
                    <td>
                        @item.Quantity
                    </td>
                    <td>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" checked>

                        </div>
                    </td>
                    <td>
                        <div class="d-flex gap-3 edit-delet"><button class="button" data-bs-toggle="modal"
                                data-bs-target="#updateItem"><img src="../images/pencil.svg"></button><button class="button"
                                data-bs-toggle="modal" data-bs-target="#deleteItem"><img class="delete-icon"
                                    src="../images/trash.svg"></button>
                        </div>
                    </td>
                </tr>
            }


        </tbody>
    </table>
</div>

<div class="d-flex justify-content-end gap-2 pagging pe-2 mb-5">
    <label>Items Per Page:</label>
    <input type="number" placeholder="1">
    <span>
        Showing 1-5 of 5
    </span>
    <button>
        < </button>
            <button>></button>
</div>
