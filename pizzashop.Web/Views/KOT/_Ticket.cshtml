@model List<pizzashop.Entity.ViewModels.Ticket>
<div class=" tab-pane fade show active p-3" id="tab1" role="tabpanel" aria-labelledby="nav-tab1">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h4 style="color:#087cc4;" class="cat-name"></h4>
        </div>
        <div class="d-flex align-items-center justify-content-end gap-2">
            <button class="filled-button btn-lg p-1 inprogress">
                InProgress
            </button>
            <button class="ready unfilled-button btn-lg p-1 ">
                Ready
            </button>
            <button class="pagination-link unfilled-button btn-lg p-1" @(ViewBag.CurrentPage > 1 ? "" : "disabled")
                data-page="@(ViewBag.CurrentPage - 1)">
                <i class="bi bi-chevron-left"></i>
            </button>
            <button 
                class="pagination-link unfilled-button btn-lg p-1 " @(ViewBag.CurrentPage < ViewBag.totalOrder ? "" : "disabled")
                data-page="@(ViewBag.CurrentPage + 1)">
                <i class="bi bi-chevron-right"></i>
            </button>
        </div>

    </div>

    <div class="d-flex align-item-center justify-content-start flex-wrap gap-2 ">

        @foreach (var order in Model)
        {
            @if (order.Items.Any())
            {
                <div class="order-card" data-orderid="@order.Orderid">
                    <div class="top-part p-2">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="order-header text-primary">#@order.Orderid</div>
                            <div class="small text-muted"><i class="bi bi-stopwatch me-1"></i> 3 days 20 hours 10 min
                            </div>
                        </div>
                        <div class="small text-muted fw-bold">@order.Sectionname <i class="bi bi-dot"></i> @foreach(var table in order.Tablenames)
                            {
                                @table
                            }
                        </div>
                    </div>

                    <div class="scroll-box p-2">

                        @foreach (var item in order.Items)
                        {
                            <p class="mb-1 mt-1">@item.Itemname<span class="float-end">@item.Quantity</span></p>
                            @foreach (var modifier in item.Modifiers)
                            {
                                <ul class="mb-0">
                                    <li>@modifier.Modifiername</li>
                                </ul>
                            }
                            <span class="ms-3"><span class="text-info">Instruction : </span>@item.Itemwisecomment</span>
                        }

                    </div>

                    <div class="top-part p-2">
                        <span><span class="text-info">Order Instruction : </span>@order.Orderwisecomment</span>
                    </div>
                </div>
            }

        }

    </div>


</div>
